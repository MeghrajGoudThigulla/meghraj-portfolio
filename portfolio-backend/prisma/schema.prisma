// Prisma schema aligned with portfolio contact flow

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Connection URL is configured via prisma.config.ts (DATABASE_URL)
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  segment   String   @default("Consulting")
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}
