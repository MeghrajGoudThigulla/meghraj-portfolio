// Prisma schema aligned with portfolio contact flow

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Connection URL is configured via prisma.config.ts (DATABASE_URL)
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  segment   String   @default("Consulting")
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}

model PortfolioMetric {
  id         Int      @id @default(autoincrement())
  eventName  String
  page       String
  sessionId  String?
  value      Float?
  durationMs Int?
  success    Boolean?
  meta       Json?
  createdAt  DateTime @default(now())

  @@index([eventName])
  @@index([createdAt])
}

model PortfolioMetricDedupe {
  id          BigInt   @id @default(autoincrement())
  eventName   String
  sessionId   String
  dedupeKey   String
  windowStart DateTime
  createdAt   DateTime @default(now())

  @@unique([eventName, sessionId, dedupeKey, windowStart], map: "PortfolioMetricDedupe_event_session_key_window_idx")
  @@index([createdAt])
}
